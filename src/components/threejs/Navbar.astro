---
import { cn } from '../../lib/utils.ts'

interface Props {
    options: { value: string, label: string }[]
    title: string
    className?: string
    navClassName?: string
}

const { options, title, className, navClassName } = Astro.props
---

<div class={className || ''}>
    <nav class={cn('overflow-y-auto w-1/2', navClassName)}>
        <ul class="flex gap-4 h-12 items-center">
            {options.map(option => (
                <li><a class="hover:underline w-max flex" href={option.value}>{option.label}</a></li>
            ))}
        </ul>
    </nav>
    <h1 class="text-2xl font-bold font-mono bg-slate-800 w-max">{title}</h1>
</div>