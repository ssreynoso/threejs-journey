---
// En layouts tenemos componentes especiales que estan pensados para envolver partes de nuestra aplicación.
// Por ejemplo, el layout de la página principal, el layout de la página de contacto, etc.

// Estas son las propiedades que podemos usar en el layout.
interface Props {
    title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='description' content='Astro description' />
        <meta name='viewport' content='width=device-width' />
        <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
        <meta name='generator' content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <nav class="container h-12 flex items-center gap-4">
            <a href='/'>Home</a>
            <a href='/basics'>Basics</a>
            <a href='/classic-techniques'>Classic Techniques</a>
        </nav>
        <slot />
    </body>
</html>

<style is:global>
    :root {
        /*  */
        --background: rgb(9, 9, 11);
        --foreground: rgb(250, 250, 250);
        
        --card: rgb(9, 9, 11);
        --card-foreground: rgb(250, 250, 250);

        --popover: rgb(9, 9, 11);
        --popover-foreground: rgb(250, 250, 250);

        --primary: rgb(250, 250, 250);
        --primary-foreground: rgb(24, 24, 27);

        --secondary: rgb(39, 39, 42);
        --secondary-foreground: rgb(250, 250, 250);

        --muted: rgb(39, 39, 42);
        --muted-foreground: rgb(161, 161, 170);

        --accent: rgb(39, 39, 42);
        --accent-foreground: rgb(250, 250, 250);

        --destructive: rgb(127, 29, 29);
        --destructive-foreground: rgb(250, 250, 250);

        --warning: rgb(254, 243, 200);
        --warning-foreground: rgb(245, 159, 10);

        --border: rgb(39, 39, 42);
        --input: rgb(39, 39, 42);
        --ring: rgb(212, 212, 216);

        --hover: rgba(255,255,255,.1);
        --radius: 0.5rem;
    }
    html {
        color-scheme: dark light;
    }
    body {
        @apply bg-background text-foreground;
    }
</style>
